#list.panel.panel-default( data-ng-init='init( )' )
    .panel-heading 列表
    .panel-body
        .btn-group.btn-group-sm
            a.btn.btn-default( ng-click='list( $event )' ) 刷新
            a.btn.btn-default 删除
            a.btn.btn-primary( href='#{site.dashboard}/code/new' ) 创建
    .table-responsive
        table.table.table-hover.table-striped
            tr
                th.column-select
                    a.btn.btn-default.btn-xs( data-toggle='button' ) 全选
                th 文件名
                th 作者
                th 操作
            tr( ng-repeat='code in codes' )
                td
                    a.btn.btn-default.btn-xs( data-toggle='button' ) 选择
                td
                    .btn-group-vertical.btn-group-xs
                        a.btn.btn-default( ng-repeat='(filename, file) in code.files' href='{{file.raw_url}}' target='_blank' ) {{ filename }}
                td
                    a( href='/user/github/{{ code.user.id }}', target='_blank' ) {{ code.user.login }}
                td
                    .btn-group
                        a.btn.btn-default.btn-xs( href='#{site.dashboard}/code/{{ code._id }}' type='button' ) 修改
                        a.btn.btn-default.btn-xs( href='javascript:' ng-click='remove( code )' type='button' ) 删除
        .panel-footer
            pagination.pagination-sm( total-items='11', page='page', boundary-links='true', direction-links='false', rotate='false', first-text='首页', last-text='尾页' )