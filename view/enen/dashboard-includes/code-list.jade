#list.panel.panel-default( data-ng-init='init( )' )
    .panel-body
        .btn-group
            a.btn.btn-default( ng-click='list( $event )' ) 刷新
            a.btn.btn-primary( href='#{config.dashboard}/code/new' ) 新建代码
    table.table.table-hover.table-striped
        tr
            th.column-name 名称
            th.column-author 作者
            th.column-actions 功能
        tr( ng-repeat='code in codes' )
            td
                a.btn.btn-link.btn-sm( href='/code/{{ code._id }}', target='_blank' ) {{ code.name }}
            td
                a.btn.btn-link.btn-sm( href='/user/{{ code.author._id }}', target='_blank' ) {{ code.author.username }}
            td
                a.btn.btn-link.btn-sm( href='#{config.dashboard}/code/{{ code._id }}' ) 编辑
                a.btn.btn-link.btn-sm( href='javascript:', ng-click='remove( code )' ) 删除