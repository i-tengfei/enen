html( lang='zh' )
    include ../includes/head
    body
        block body
        #container
            #menu.menu-hide
                #user
                    a#menu-toggle
                        i.fa.fa-bars
                    #user-name
                        a( href='/user/#{user._id}', target='_blank' ) #{user.username}
                    #user-avatar
                        img
                ul.nav.nav-pills.nav-stacked
                    li.active
                        a( href='javascript:' )
                            i.fa.fa-home
                            span 首页
                    li
                        a( href='#{site.dashboard}/article' )
                            i.fa.fa-pencil-square
                            span 文章
                    li
                        a( href='#{site.dashboard}/code' )
                            i.fa.fa-code
                            span 代码
                    li
                        a( href='javascript:' )
                            i.fa.fa-picture-o
                            span 图库
                    li
                        a( href='#{site.dashboard}/setting' )
                            i.fa.fa-cog
                            span 设置
            #main
                block content