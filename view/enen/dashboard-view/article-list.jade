#list.panel.panel-default( data-ng-init='init( )' )
    .panel-heading 文章列表
    .panel-body
        .btn-group.btn-group-sm
            a.btn.btn-default( ng-click='list( $event )' ) 刷新
            a.btn.btn-default 删除
            a.btn.btn-primary( href='#{site.dashboard}/article/new' ) 创建
    .table-responsive
        table.table.table-hover.table-striped
            tr
                th.column-select
                    a.btn.btn-default.btn-xs( data-toggle='button' ) 全选
                th 标题
                th 作者
                th 操作
            tr( ng-repeat='article in articles' )
                td
                    a.btn.btn-default.btn-xs( data-toggle='button' ) 选择
                td
                    a( href='/article/{{ article._id }}', target='_blank' ) {{ article.title }}
                td
                    a( href='/user/{{ article.author._id }}', target='_blank' ) {{ article.author.username }}
                td
                    .btn-group
                        a.btn.btn-default.btn-xs( href='#{site.dashboard}/article/{{ article._id }}' type='button' ) 修改
                        a.btn.btn-default.btn-xs( href='javascript:' ng-click='remove( article )' type='button' ) 删除
        .panel-footer
            pagination.pagination-sm( total-items='11', page='page', boundary-links='true', direction-links='false', rotate='false', first-text='首页', last-text='尾页' )